<% layout('layout') -%>
  
<div class="jumbotron" id='navbar-gap'>
  <div class="container">
    <h1 class='text-center'> What Can We Find for You?</h1>
    <p class='text-center'>Start a GINORMOUS SEARCH now</p>
    <div class='row'>
      <div class='col-md-6 col col-md-offset-3'>
        <div class='input-group col-md-12'>
      
            <input type='text' id='search' class='form-control input-lg' name='search_term' placeholder='Search for something...'>
                <span class='input-group-btn'>
            <button type='submit' class='btn btn-info btn-lg'><span aria-hidden='true' class='fa fa-search'></span> Search</button>
          </span>
        </div>
      </div> <!-- col -->
    </div> <!-- row -->
  </div> <!-- container -->
</div> <!-- jumbotron -->


<div class='container'>
  
  <div class='row' id='searchResults'>    
    <% for (var i = 0; i < products.length; i++) { %>
    <div class='col-md-4'>
      <a href='/product/<%= products[i]._id %>'>
        <div class='thumbnail'>
          <img src='<%= products[i].image %>'>
          <div class='caption'>
            <h3><%= products[i].name %></h3>
            <p><%= products[i].category.name %></p>
            <p>$<%= products[i].price %></p>            
          </div> <!-- caption -->
        </div> <!-- thumbnail -->
      </a>  
    </div> <!-- col -->
    <% } %>
    
    <ul class='pagination text-center'>
      <li>
        <% for (var i = 1; i <= pages; i++) { %>
          <% if (i === 1) { %>
            <li><a href='/'><%= i %></a></li>
     
          <% } else {%>
           <li><a href='/page/<%= i %>'><%= i %></a></li>
          <% } %>
        <% } %>
      </li>
    </ul>
  </div> <!-- row -->
  
</div> <!-- container -->